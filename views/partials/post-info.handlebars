<div class="col-sm-12 col-md-6 col-lg-4">
    <div class="card text-center">
        {{!-- <img src="..." class="card-img-top" alt="..."> --}}
        <div class="card-body">
            <h2 class="card-title"><a href="/post/{{id}}">{{title}}</a></h2>
            <div class="card-text" id="post-text">
                {{post_text}}
            </div>
        </div>
        <div class="card-footer text-muted">
            <p class="card-text">Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
    </div>
</div>