<div class="col-sm-12 col-md-6 col-lg-4">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="..." class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><a href="/post/{{id}}">{{title}}</a></h5>
                    <div class="card-text" id="post-text">
                        {{post_text}}
                    </div>
                    <div class="card-tags">
                        {{#each tags}}
                        <h6 class="badge rounded-pill">{{tag_text}}</h6>
                        {{/each}}
                    </div>
                    <div class="card-footer">
                        <p class="card-text">Posted by {{user.username}} on {{format_date created_at}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 