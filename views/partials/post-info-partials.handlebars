<div class="col-sm-12 col-md-6 col-lg-4">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="..." class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title"><a href="/dashboard/edit/{{id}}">{{title}}</a></h2>
                    <span>{{format_date created_at}}</span>
                    <div class="card-tags">
                        {{#each tags}}
                        <h6 class="badge rounded-pill">{{tag_text}}</h6>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>