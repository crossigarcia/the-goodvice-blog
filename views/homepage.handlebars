<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="card">
        <div class="card-header">
            <h2><a href="/post/{{id}}">{{title}}</a></h2>
            <h4>{{tags.tag_text}}</h4>
            <span>Posted by {{user.username}} on {{created_at}}</span>
            
        </div>
        <div class="card-body">
            {{post_text}}
        </div>
      </div>
    </article>
  </li>
  {{/each}}
</ol>