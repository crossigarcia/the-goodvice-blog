<article>
    <a href="/dashboard" id="dash-link"> &larr; Back to dashboard</a>
    <div class="card">
        <div class="card-header">
            <h2>
                Edit Post
            </h2>
        </div>
        <div class="card-body">
            <form class="edit-post-form">
                <div>
                    <label for="post-title">update your question:</label>
                    <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
                </div>
                <div>
                    <label for="post-text">update details:</label>
                    <input class="form-control" name="post-text" type="text" value="{{post.post_text}}" />
                </div>
                <div class="post-data">
                    Posted by you on {{format_date
                    post.created_at}}
                    |
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
                        post.comments.length}}</a>
                </div>
                
                <div class="row row-cols-3 justify-content-around">
                    <button type="submit" class="col modal-btn">Save post</button>
                    <button type="button" class="delete-post-btn col modal-btn">Delete post</button>
                </div>
            </form>
        </div>
    </div>
</article>




<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
