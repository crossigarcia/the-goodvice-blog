<section class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6 col-lg-6">
      <form class="login-form">
        <h2>Log in</h2>
        <div>
          <label for="username-login">username:</label>
          <input class="form-control" type="text" id="username-login" />
        </div>
        <div>
          <label for="password-login">password:</label>
          <input class="form-control" type="password" id="password-login" />
        </div>
        <div>
          <button type="submit">login</button>
        </div>
      </form>
    </div>
    
    <div class="col-sm-12 col-md-6 col-lg-6">
      <form class="signup-form">
        <h2>Sign Up</h2>
        <div>
          <label for="username-signup">username:</label>
          <input class="form-control" type="text" id="username-signup" />
        </div>
        <div>
          <label for="email-signup">email:</label>
          <input class="form-control" type="email" id="email-signup" />
        </div>
        <div>
          <label for="password-signup">password:</label>
          <input class="form-control" type="password" id="password-signup" />
        </div>
        <div>
          <button type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
  
</section>


<script src="/javascript/login.js"></script>